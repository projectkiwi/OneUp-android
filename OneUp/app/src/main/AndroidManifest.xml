<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.purduecs.kiwi.oneup">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".OneUpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".OneUpActivity"
            android:label="@string/title_activity_one_up"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".NewsfeedActivity"
            android:label="The Newsfeed"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".NewsfeedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.purduecs.kiwi.oneup.NewsfeedActivity" />
        </activity>

        <activity
            android:name=".NotificationsActivity"
            android:label="Notifications"
            android:parentActivityName=".NewsfeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.purduecs.kiwi.oneup.NewsfeedActivity" />
        </activity>

        <activity
            android:name=".BookmarksActivity"
            android:label="Bookmarks"
            android:parentActivityName=".NewsfeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.purduecs.kiwi.oneup.NewsfeedActivity" />
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"/>

        <activity
            android:name=".ProfileActivity"
            android:label="Your Profile"
            android:parentActivityName=".NewsfeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.purduecs.kiwi.oneup.NewsfeedActivity" />
        </activity>

        <activity android:name=".ChallengeDetailActivity"
            android:parentActivityName=".NewsfeedActivity"/>
        <activity android:name=".ChallengeCreationActivity"
            android:parentActivityName=".NewsfeedActivity"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.purduecs.kiwi.oneup.NewsfeedActivity" />
        </activity>

    </application>
</manifest>
