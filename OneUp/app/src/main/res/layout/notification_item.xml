<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_vertical"
    android:background="@drawable/attempt_item_background">

    <ImageView
        android:id="@+id/notif_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="@dimen/text_margin" />

    <TextView
        android:id="@+id/notif_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_toRightOf="@id/notif_image"
        android:layout_toEndOf="@id/notif_image"
        android:layout_centerVertical="true"
        style="@style/MediumSmallText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/LargeText"
        android:text=">"/>

</RelativeLayout>