<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/attempt_item_background">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/text_margin_large" />

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_toEndOf="@id/image"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/text_margin_small"
            style="@style/MediumSmallText" />

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/MediumLargeText" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/text_margin_small"
            style="@style/MediumSmallText" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/attempt_like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/like_button"
        android:background="@android:color/transparent"
        style="@style/SmallText"
        android:textColor="@drawable/like_button_text" />
</RelativeLayout>