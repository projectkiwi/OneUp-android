<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/attempt_item_background">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/text_margin_large"
        android:src="@color/confirmedGreen"/>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_toEndOf="@id/image"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/text_margin_small"
            style="@style/MediumSmallText"
            android:text="Purdue Hackers" />

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/MediumLargeText"
            android:text="3207 people" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/text_margin_small"
            style="@style/MediumSmallText"
            android:text="2 days ago" />
    </LinearLayout>
</RelativeLayout>