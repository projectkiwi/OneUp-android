<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="LargeText">
        <item name="android:textColor">@color/darkGreyText</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MediumLargeText">
        <item name="android:textColor">@color/darkGreyText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">@color/darkGreyText</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MediumSmallText">
        <item name="android:textColor">@color/darkGreyText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/darkGreyText</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TinyText">
        <item name="android:textColor">@color/darkGreyText</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DialogTitleSecondary">
        <item name="android:textColor">@color/lightGreyText</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="TextField">
        <item name="android:textColorHint">@color/lightGreyText</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/text_margin</item>
        <item name="android:paddingRight">@dimen/text_margin</item>
        <item name="android:paddingTop">@dimen/text_margin_medium</item>
        <item name="android:paddingBottom">@dimen/text_margin_medium</item>
        <item name="android:gravity">top</item>
    </style>

</resources>
